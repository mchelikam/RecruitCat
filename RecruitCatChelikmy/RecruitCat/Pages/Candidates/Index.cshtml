@page
@model RecruitCat.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "Candidates";
}

<h1>All Candidates</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetSalary)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].WorkAuthorization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].DateOfBirth)
            </th>
      
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].JobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSalary)
            </td>
         
            <td>
                @if (item.WorkAuthorization)
                {
                    <span class="badge badge-warning">Authorized</span>
                }
                else
                {
                    <span class="badge badge-secondary">Not Authorized</span>

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
