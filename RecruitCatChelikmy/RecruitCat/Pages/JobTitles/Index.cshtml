@page
@model RecruitCat.Pages.JobTitles.IndexModel

@{
    ViewData["Title"] = "Job Titles";
}

<h1>All Job Titles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].RemoteOption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobTitle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSalary)
            </td>
            <td>
                @if (item.RemoteOption)
                {
                    <span class="badge badge-primary">Available</span>
                }
                else
                {
                    <span class="badge badge-warning">Not Available</span>

                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
