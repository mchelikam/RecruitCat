<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecruitCat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #44524a;">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="https://i.pinimg.com/originals/7f/47/8e/7f478e12fe325aa1e28a33b3c1c0b995.png" alt="" width="120" height="100">
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="font-size: xx-large; color: black">RecruitCat</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-size: x-large" class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-size: x-large" class="nav-link text-dark" asp-page="/OurTeam">OurTeam</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container col-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #44524a; color: #000000">
        <div class="container">
            <div class="row">
                <div class="col">
                    Our Office: 27 Hammock St, New York 27077
                </div>
                <div class="col">
                    Call Us at: +1 (980)-727-0077
                </div>
            </div>
          </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
