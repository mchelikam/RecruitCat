@page
@model RecruitCat.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Companies";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].OptionalStartDate)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CurrentNumberOfEmployees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PositionStatusOpen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionalStartDate)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.CurrentNumberOfEmployees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.Name)
            </td>
            <td>
                @if (item.PositionStatusOpen)
                {
                    <span class="badge badge-success">Open</span>
                }
                else
                {
                    <span class="badge badge-danger">Closed</span>

                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
