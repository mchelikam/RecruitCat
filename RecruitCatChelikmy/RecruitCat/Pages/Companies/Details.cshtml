@page
@model RecruitCat.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details-Company";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OptionalStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OptionalStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CurrentNumberOfEmployees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CurrentNumberOfEmployees)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionStatusOpen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionStatusOpen)
        </dd>
    </dl>
</div>
<div>
    <h4>Candidates List</h4>
    @if(Model.Company.Candidates.Count()==0)
        {
        <div class="alert alert-warning">
            <p>There are no candidates associated.</p>
        </div>
        }

    else 
    { 
    <table class="table table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].Email)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].OptionalStartDate)</th>
            </tr>
        </thead>
        @foreach (var item in Model.Company.Candidates)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
        <td>@Html.DisplayFor(modelItem => item.TargetSalary)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.OptionalStartDate)</td>
    </tr>
           
        }
    </table>
    }

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
