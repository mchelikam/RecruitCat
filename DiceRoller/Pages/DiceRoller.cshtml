@page
@model DiceRoller.Pages.DiceRollerModel
@{
    int randomNumber = new Random().Next(1, 7);
    int winningNumber = 3;
}
<div class="p-3 mb-2 bg-secondary text-white">
   

    <div class="text-center">
        <h1> The random number gernerated is @randomNumber.</h1>


        @if (randomNumber == winningNumber)
        {
            <div class="alert alert-success" role="alert">
                <h2>Congratulations!!! You've Won</h2>
            </div>
        }
        else if (randomNumber > winningNumber)
        {
            <div class="alert alert-danger" role="alert">

                <h2> You're off by @(randomNumber - winningNumber)</h2>
                <h2>Better Luck nect time</h2>
            </div>

        }
        else
        {
            <div class="alert alert-danger" role="alert">

                <h2> You're off by @(winningNumber - randomNumber)</h2>
                <h2>Better Luck nect time</h2>
            </div>
            <a class="btn btn-primary" asp-page="/DiceRoller">Play Again!</a>
        }
    </div>
</div>